{
    "commands": [
        {
            "name": "install",
            "action": "bash install.sh"
        },
        {
            "name": "build",
            "actions": [
                "rm build/webdash",
                "make -C build"
            ],
            "dependencies": [
                "./src/lib/webdash-executer/webdash.config.json:build"
            ],
            "wdir": "$.thisDir()"
        },
        {
            "name": "report-repo-state",
            "actions": [
                "git status"
            ],
            "frequency": "daily",
            "when": "new-day",
            "notify-dashboard": true,
            "wdir": "$.thisDir()"
        }
    ]
}